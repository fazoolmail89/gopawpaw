<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<im.device.smartdining.widget.animation.DragLayer
		android:id="@+id/draglayer" android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		>
	<LinearLayout android:id="@+id/screen_top"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1"
		android:rotation="180">
	</LinearLayout>
	<LinearLayout android:id="@+id/screen_center"
		android:layout_width="fill_parent" android:layout_height="10dip"
		android:orientation="horizontal"
		>
	</LinearLayout>
	<LinearLayout android:id="@+id/screen_bottom"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1"
		>
	</LinearLayout>
	</im.device.smartdining.widget.animation.DragLayer>
</LinearLayout>
